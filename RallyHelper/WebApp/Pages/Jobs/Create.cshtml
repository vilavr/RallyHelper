@page
@model WebApp.Pages.Jobs.CreateModel

@{
    ViewData["Title"] = "Create Job";
}

<h1>Create Job</h1>

@if (Model.HasActiveRally)
{
    <form method="post">
        <div class="form-group">
            <label for="clientName">Please enter your name</label>
            <input type="text" class="form-control" id="clientName" name="ClientName" required />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
}
else
{
    <div class="alert alert-warning">
        Sorry, there is no active rally now, which means we're currently closed. Please come back later.
    </div>
}

<div>
    <a asp-page="/Shared/Index">Go back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
