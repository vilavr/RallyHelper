@model WebApp.Pages.Jobs.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Job</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Job.Id" />
            <div class="form-group">
                <label asp-for="Job.TotalPrice" class="control-label"></label>
                <input asp-for="Job.TotalPrice" class="form-control" />
                <span asp-validation-for="Job.TotalPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.RallyId" class="control-label"></label>
                <select asp-for="Job.RallyId" class="form-control" asp-items="ViewBag.RallyId"></select>
                <span asp-validation-for="Job.RallyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.StartTime" class="control-label"></label>
                <input asp-for="Job.StartTime" class="form-control" />
                <span asp-validation-for="Job.StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.EndTime" class="control-label"></label>
                <input asp-for="Job.EndTime" class="form-control" />
                <span asp-validation-for="Job.EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
